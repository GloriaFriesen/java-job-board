<div class="jumbotron">
  <h1>Search By Cities</h1>
</div>

<h2>All Cities</h2>

  #foreach ($city in $cities)
    <a href="/cities/$city.getId()">$city.getName()</a><br>
  #end

<h3>
  Don't see your city listed? Add it here.
</h3>

<form action="/cities">
  <label for="city">City</label>
  <input type="text" name="city" id="city">
  <button type="submit" class="btn btn-warning">Add City</button>
</form>
